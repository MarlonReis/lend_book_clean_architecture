{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es2019",
    "lib": [
      "es2019",
      "esnext.asynciterable"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "noEmitOnError": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": "src",
    "rootDirs": [
      "src"
    ],
    "paths": {
      "@/*": [
        "*"
      ],
    },
  },
  "include": [
    "src",
    "test"
  ]
}